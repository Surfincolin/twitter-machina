#intro_view p
  margin 10px 0

#state_selector > #next
  cursor pointer
  cursor hand

// Query menu bar

#menu, #menu ul {
    margin: 0;
    padding: 0;
    list-style: none;
}
#menu {
    width: 900px;
    margin: 60px auto;
    background-color: #CCC;
}
#menu li {
    float: left;
    position: relative;

}
#menu a {
    float: left;
    padding: 12px 30px;
    color: #999;
    text-transform: uppercase;
    font: bold 12px Arial, Helvetica;
    text-decoration: none;
    text-shadow: 0 1px 0 #000;
}
#menu li:hover > a {
    color: #fafafa;
}
*html #menu li a:hover { /* IE6 only */
    color: #fafafa;
}
.query_block
  float left
  border 1px solid red
  padding 5px

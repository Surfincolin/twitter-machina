@import url('reset.css');

/* apply a natural box layout model to all elements */
*, *:before, *:after {
  -moz-box-sizing: border-box; -webkit-box-sizing: border-box; box-sizing: border-box;
}
article, aside, figure, footer, header, hgroup,
menu, nav, section { display: block; }

// Now we start our CSS - - - - - - - - - - - - - - - -

body
  // white-space pre      // Use this for divs that contain JSON that we want to format nicely.
  color black
  font-family 'Source Sans Pro', sans-serif
  font-weight 300
  font-size 16px

h1
  font-size 2em
  font-weight 400
  margin 20px 0

#container
  position relative
  top 0px
  margin 0 auto
  width 900px
  border 1px solid #CCC

h2
  font-size 1em
  font-weight 400
  margin 20px 0

#bubbleContainer
  word-wrap break-word
